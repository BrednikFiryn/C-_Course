<Window x:Class="Lessons_9_WPF.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lessons_9_WPF"
        mc:Ignorable="d"
        Title="Canvas" Height="450" Width="800">
    <Canvas>
        <TextBlock x:Name="Red"
                   Width="100"
                   Height="100"
                   Canvas.Left="100"
                   Canvas.Top="50"
                   Text="1"
                   Background="Red"
            />
        <TextBlock x:Name="Gold"
                   Width="100"
                   Height="100"
                   Canvas.Left="150"
                   Canvas.Top="100"
                   Text="2"
                   Background="Gold"
            />
        <TextBlock x:Name="Green"
                   Width="100"
                   Height="100"
                   Canvas.Left="200"
                   Canvas.Top="150"
                   Text="3"
                   Background="Green"
            />
    </Canvas>
</Window>
